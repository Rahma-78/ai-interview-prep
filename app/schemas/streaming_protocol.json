{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "AI Interview Prep Streaming Protocol",
    "description": "NDJSON stream event schema for interview question generation",
    "definitions": {
        "StatusEvent": {
            "type": "object",
            "description": "Pipeline status/progress update",
            "properties": {
                "type": {
                    "const": "status"
                },
                "content": {
                    "type": "string",
                    "description": "Status identifier or message",
                    "examples": [
                        "step_1",
                        "step_2",
                        "step_3",
                        "Finding sources for Batch 1/3..."
                    ]
                }
            },
            "required": [
                "type",
                "content"
            ],
            "additionalProperties": false
        },
        "DataEvent": {
            "type": "object",
            "description": "Question data for a skill",
            "properties": {
                "type": {
                    "const": "data"
                },
                "content": {
                    "type": "object",
                    "properties": {
                        "skill": {
                            "type": "string",
                            "description": "Skill name"
                        },
                        "questions": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            },
                            "description": "List of interview questions"
                        }
                    },
                    "required": [
                        "skill",
                        "questions"
                    ]
                }
            },
            "required": [
                "type",
                "content"
            ],
            "additionalProperties": false
        },
        "ErrorEvent": {
            "type": "object",
            "description": "Error notification",
            "properties": {
                "type": {
                    "const": "error"
                },
                "content": {
                    "type": "object",
                    "properties": {
                        "error": {
                            "type": "string",
                            "description": "Error message"
                        },
                        "error_type": {
                            "type": "string",
                            "description": "Exception class name"
                        },
                        "skill": {
                            "type": "string",
                            "description": "Affected skill (if applicable)"
                        }
                    },
                    "required": [
                        "error"
                    ]
                }
            },
            "required": [
                "type",
                "content"
            ],
            "additionalProperties": false
        },
        "BatchCompleteEvent": {
            "type": "object",
            "description": "Internal batch completion marker",
            "properties": {
                "type": {
                    "const": "batch_complete"
                },
                "content": {
                    "type": "null"
                }
            },
            "required": [
                "type",
                "content"
            ],
            "additionalProperties": false
        }
    },
    "oneOf": [
        {
            "$ref": "#/definitions/StatusEvent"
        },
        {
            "$ref": "#/definitions/DataEvent"
        },
        {
            "$ref": "#/definitions/ErrorEvent"
        },
        {
            "$ref": "#/definitions/BatchCompleteEvent"
        }
    ]
}